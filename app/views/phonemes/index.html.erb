<p id="notice"><%= notice %></p>

<h1>Listing Phonemes</h1>

<table>
  <thead>
    <tr>
      <th>Base</th>
      <th>Actual</th>
      <th>Diacritic</th>
      <th>Sequence</th>
      <th>Speaker</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @phonemes.each do |phoneme| %>
      <tr>
        <td><%= phoneme.base %></td>
        <td><%= phoneme.actual %></td>
        <td><%= phoneme.diacritic %></td>
        <td><%= phoneme.sequence %></td>
        <td><%= phoneme.speaker %></td>
        <td><%= link_to 'Show', phoneme %></td>
        <td><%= link_to 'Edit', edit_phoneme_path(phoneme) %></td>
        <td><%= link_to 'Destroy', phoneme, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

