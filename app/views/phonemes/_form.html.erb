<%= simple_form_for(@phoneme) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :base %>
    <%= f.input :actual %>
    <%= f.input :diacritic %>
    <%= f.input :sequence %>
    <%= f.association :speaker %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
